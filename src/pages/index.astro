---
const valueProps = [
  { icon: 'ü§ñ', title: 'Agent Tech', desc: 'Latest in AI agents, autonomous systems, and OpenClaw updates' },
  { icon: 'üõ†Ô∏è', title: 'Tools & Skills', desc: 'New skills, integrations, and community-built tools' },
  { icon: 'üöÄ', title: 'Product Launches', desc: 'Exciting projects built with OpenClaw' },
  { icon: 'üí°', title: 'Tips & Tricks', desc: 'Power user guides, configs, and workflows' },
];

const topics = ['OpenClaw', 'ClawdBot', 'AI Agents', 'Autonomous Tools', 'Skills Marketplace', 'Community Projects', 'Agent Architecture'];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Clawverse ‚Äî The pulse of the OpenClaw ecosystem. Weekly newsletter on AI agents, autonomous tools, and community highlights." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Clawverse ‚Äî The pulse of the OpenClaw ecosystem</title>
  </head>
  <body class="bg-[#0a0a0a] text-white min-h-screen font-sans antialiased">

    <!-- Hero -->
    <section class="flex flex-col items-center justify-center min-h-[85vh] px-6 text-center">
      <div class="max-w-2xl mx-auto">
        <p class="text-accent font-mono text-sm tracking-widest uppercase mb-4">Newsletter</p>
        <h1 class="text-5xl md:text-7xl font-bold tracking-tight mb-4">
          Claw<span class="text-accent">verse</span>
        </h1>
        <p class="text-xl md:text-2xl text-zinc-400 mb-2">The pulse of the OpenClaw ecosystem</p>
        <p class="text-zinc-500 mb-10 max-w-lg mx-auto">
          Weekly newsletter covering OpenClaw, AI agents, autonomous tools, community highlights, and the best in agent tech.
        </p>

        <!-- Signup Form -->
        <form id="signup-form" class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto mb-4">
          <input
            type="email"
            id="email-input"
            placeholder="you@example.com"
            required
            class="flex-1 px-4 py-3 rounded-lg bg-surface border border-zinc-700 text-white placeholder-zinc-500 focus:outline-none focus:border-accent focus:ring-1 focus:ring-accent transition"
          />
          <button
            type="submit"
            id="submit-btn"
            class="px-6 py-3 bg-accent text-black font-semibold rounded-lg hover:bg-accent-dark transition whitespace-nowrap cursor-pointer"
          >
            Subscribe
          </button>
        </form>
        <p id="form-message" class="text-sm h-5"></p>
      </div>
    </section>

    <!-- Value Props -->
    <section class="max-w-5xl mx-auto px-6 py-20">
      <h2 class="text-3xl font-bold text-center mb-12">What you'll get</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {valueProps.map(({ icon, title, desc }) => (
          <div class="bg-surface border border-zinc-800 rounded-xl p-6 hover:border-accent/40 transition">
            <div class="text-4xl mb-4">{icon}</div>
            <h3 class="text-lg font-semibold mb-2">{title}</h3>
            <p class="text-zinc-400 text-sm">{desc}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- Topics -->
    <section class="max-w-3xl mx-auto px-6 py-20 text-center">
      <h2 class="text-3xl font-bold mb-10">Topics we cover</h2>
      <div class="flex flex-wrap justify-center gap-3">
        {topics.map((t) => (
          <span class="px-4 py-2 bg-surface border border-zinc-800 rounded-full text-sm text-zinc-300 hover:border-accent/50 transition">
            {t}
          </span>
        ))}
      </div>
    </section>

    <!-- Footer -->
    <footer class="border-t border-zinc-800 mt-10">
      <div class="max-w-5xl mx-auto px-6 py-10 flex flex-col sm:flex-row items-center justify-between gap-4 text-zinc-500 text-sm">
        <p>&copy; 2026 Clawverse. Part of the <a href="https://openclaw.ai" class="text-accent hover:underline">OpenClaw</a> ecosystem.</p>
        <div class="flex gap-6">
          <a href="https://github.com/openclaw" class="hover:text-accent transition">GitHub</a>
          <a href="https://twitter.com/openclaw" class="hover:text-accent transition">Twitter</a>
        </div>
      </div>
    </footer>

    <script>
      const form = document.getElementById('signup-form');
      const msg = document.getElementById('form-message');
      const btn = document.getElementById('submit-btn');
      const emailInput = document.getElementById('email-input');

      form?.addEventListener('submit', (e) => {
        e.preventDefault();
        const email = emailInput?.value?.trim();
        if (!email) return;

        btn.textContent = 'Subscribing...';
        btn.disabled = true;

        setTimeout(() => {
          try {
            const subs = JSON.parse(localStorage.getItem('clawverse_subs') || '[]');
            if (subs.includes(email)) {
              msg.textContent = "You're already subscribed!";
              msg.className = 'text-sm h-5 text-yellow-400';
            } else {
              subs.push(email);
              localStorage.setItem('clawverse_subs', JSON.stringify(subs));
              msg.textContent = "üéâ You're in! Watch your inbox.";
              msg.className = 'text-sm h-5 text-accent';
              emailInput.value = '';
            }
          } catch {
            msg.textContent = 'Something went wrong. Try again.';
            msg.className = 'text-sm h-5 text-red-400';
          }
          btn.textContent = 'Subscribe';
          btn.disabled = false;
        }, 600);
      });
    </script>
  </body>
</html>
